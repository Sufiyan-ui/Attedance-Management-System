<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/purple_200"
        android:padding="20dp"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:text="Mohd Sufiyan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rollNumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="18DCS041"
        app:layout_constraintTop_toTopOf="@id/student"
        android:layout_marginStart="19dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@id/student"
        app:layout_constraintBottom_toBottomOf="@id/student"
        app:layout_constraintStart_toStartOf="@id/student"
        app:layout_constraintTop_toBottomOf="@+id/student"
        />

    <Button
        android:id="@+id/presentButton"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:text="@string/P"
        android:layout_marginEnd="60dp"
        app:layout_constraintTop_toTopOf="@id/student"
        app:layout_constraintBottom_toBottomOf="@id/student"
        app:layout_constraintRight_toRightOf="@id/absentButton" />

    <Button
        android:id="@+id/absentButton"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:text="@string/absent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/student"
        app:layout_constraintBottom_toBottomOf="@id/student"
        app:layout_constraintRight_toRightOf="@id/student"
        android:onClick="absent"/>


</androidx.constraintlayout.widget.ConstraintLayout>